                    strokeColor: "${getStrokeColor}",
                    fillOpacity: "${getFillOpacity}",
                    strokeOpacity: "${getStrokeOpacity}"};
    var areaStyle = new OpenLayers.Style(areaTemplate, {context:areaContext});

